<div class="user-settings">
  <%= simple_form_for @user, url: edit_user_path(@user) do |f| %>
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
    <%= f.input :username %>
    <%= f.input :email %>
    <%= f.label :bio %>
    <%= f.file_field :bio, label: 'About Me' %>
    <%= f.button :submit, class: 'btn btn-primary' %>
  <% end %>
</div>
