<div class="container chatroom">
  <h1><%= @chatroom.id %></h1>
  <div class="messages">
    <% @chatroom.messages.each do |message| %>
      <div class="message-<%= message.id %>">
        <small>
          <strong><%= message.user.username %></strong>
          <i> <%= message.created_at.strftime("%a %b %e at %l:%M %p") %> </i>
        </small>
        <p><%= message.content %></p>
      </div>
    <% end %>
  </div>
</div>
