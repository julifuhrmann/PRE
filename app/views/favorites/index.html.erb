<div class="container-iphone">
  <div class="fav-page">
    <div class="blue-space">
      <h1>My Favorite Party People üçæ</h1>
      <p>Your favourite companions are: </p>
    </div>
  </div>

  <div class="">
      <% @favorites.each do |favorite| %>

          <div class="card-favorites d-flex justify-content-between align-items-center">

              <% if favorite.followed.avatar.attached? %>
                <%= cl_image_tag favorite.followed.avatar.key, height: 50, width: 50, crop: :fill, class: "rounded-circle" %>
              <% end %>

              <div class="">
                <h2 class="syne-font"><%= favorite.followed.username %></h2>
              </div>
                <div class="">
                  <%= button_to favorite_path(favorite), class: "herz-button button-size", method: :delete do %>
                    <i class="fa-regular fa-heart unfollow-heart"></i>
                  <% end %>
                </div>
          </div>

        <% end %>

    </div>
</div>
